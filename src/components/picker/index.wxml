<view class="itv-bg"></view>

<view class="itv-datepicker">
    <view  class="itv-datepicker-title">
        <view class="btn btn-cancel">
            {{cancelText}}
        </view>
            {{titleText}}
        <view class="btn btn-confirm">
            {{confirmText}}
        </view>
        
    </view>
    <view class="itv-datepicker-content">
          <slot-picker wx:for="{{list}}" wx:key="index" 
                class="picker picker{{index}}"
                clearMask="clearMask"
                default-value="{{chooseValue[index]}}"
                listData="{{item}}"
                bindchooseItem="chooseItem"
                keyIndex="index"
                rows="{{rows}}"
                isLoop="{{isLoop}}"
            />
    </view>
</view>